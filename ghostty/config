custom-shader-animation = true

# -------------------------------------------
# Terminator-style keybindings
# -------------------------------------------

# Split terminals
keybind = ctrl+shift+o=new_split:down
keybind = ctrl+shift+e=new_split:right

# Navigate between splits (Ctrl+Shift+Arrow)
keybind = ctrl+shift+up=goto_split:top
keybind = ctrl+shift+down=goto_split:bottom
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right

# Resize splits (Alt+Arrow)
keybind = alt+up=resize_split:up,10
keybind = alt+down=resize_split:down,10
keybind = alt+left=resize_split:left,10
keybind = alt+right=resize_split:right,10

# Toggle zoom/maximize pane (Ctrl+Shift+X)
keybind = ctrl+shift+x=toggle_split_zoom

# Close terminal pane (Ctrl+Shift+W)
keybind = ctrl+shift+w=close_surface

# Tabs
keybind = ctrl+shift+t=new_tab
keybind = ctrl+page_up=previous_tab
keybind = ctrl+page_down=next_tab

# New window
keybind = ctrl+shift+n=new_window

# Fullscreen
keybind = ctrl+shift+f11=toggle_fullscreen

# Quit
keybind = ctrl+shift+q=quit
